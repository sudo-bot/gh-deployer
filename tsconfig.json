{
    "extends": "@tsconfig/node12/tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "resolveJsonModule": true,
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@src/*": ["./src/*"],
            "@root/*": ["./*"],
            "@test/*": ["./test/*"],
            "@utils/*": ["./utils/*"]
        }
    },
    "include": [
        "./*",
        "./src/**/*",
        "./test/**/*"
    ]
}
