{
    "name": "gh-deployer",
    "version": "1.0.0",
    "description": "A GitHub deployer robot",
    "main": "index.js",
    "private": false,
    "nyc": {
        "exclude": [
            "test",
            "coverage",
            ".nyc_output"
        ],
        "reporter": [
            "text",
            "text-summary"
        ]
    },
    "homepage": "https://github.com/sudo-bot/gh-deployer",
    "bugs": {
        "email": "williamdes@wdes.fr",
        "url": "https://github.com/sudo-bot/gh-deployer/issues"
    },
    "readme": "https://github.com/sudo-bot/gh-deployer#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/sudo-bot/gh-deployer.git"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "scripts": {
        "jshint": "jshint ./",
        "start": "node index.js",
        "test": "nyc --all mocha --ui tdd",
        "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov",
        "prettier": "prettier --ignore-path ./.prettierignore --write \"*/**/*.js\" \"*.js\""
    },
    "keywords": [
        "github"
    ],
    "author": {
        "email": "williamdes@wdes.fr",
        "name": "William Desportes",
        "url": "https://william.wdes.fr"
    },
    "directories": {
        "lib": "src",
        "test": "test",
        "bin": "bin"
    },
    "license": "MPL-2.0",
    "dependencies": {
        "@sentry/node": "^4.6.4",
        "bayes": "0.0.7",
        "cloudflare": "^2.4.1",
        "dotenv": "^6.2.0",
        "log4js": "^4.0.2",
        "mailparser": "^2.4.3",
        "module-alias": "^2.2.0",
        "node-docker-api": "^1.1.22",
        "node-emoji": "^1.10.0",
        "octonode": "^0.9.5",
        "sentencer": "^0.1.5",
        "smtp-server": "^3.5.0"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "codecov": "^3.1.0",
        "jshint": "^2.10.1",
        "mocha": "^5.2.0",
        "nyc": "^13.1.0",
        "prettier": "^1.15.3"
    },
    "prettier": {
        "singleQuote": true,
        "proseWrap": "never",
        "trailingComma": "es5",
        "bracketSpacing": true,
        "printWidth": 95
    },
    "bin": {},
    "_moduleAliases": {
        "@src": "src",
        "@test": "test"
    }
}
