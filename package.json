{
    "name": "@sudo-bot/gh-deployer",
    "version": "2.2.2",
    "description": "A GitHub deployer robot",
    "main": "dist/index.js",
    "private": false,
    "nyc": {
        "extension": [
            ".ts",
            ".tsx"
        ],
        "exclude": [
            "test",
            "coverage",
            ".nyc_output",
            "**/*.d.ts"
        ],
        "reporter": [
            "text",
            "text-summary"
        ],
        "all": true
    },
    "homepage": "https://github.com/sudo-bot/gh-deployer",
    "bugs": {
        "email": "williamdes@wdes.fr",
        "url": "https://github.com/sudo-bot/gh-deployer/issues"
    },
    "readme": "https://github.com/sudo-bot/gh-deployer#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/sudo-bot/gh-deployer.git"
    },
    "engines": {
        "node": ">=10"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "bin": {
        "gh-deployer": "./bin/gh-deployer.js"
    },
    "scripts": {
        "build": "tsc",
        "changelog": "changelog-generator-twig --convention conventional+legacy --owner sudo --repo gh-deployer --repoDir ./ --baseCommit 5f5552755301e92a762698db33127c44e924fac6",
        "changelog-file": "npm run --silent changelog > CHANGELOG.md",
        "jshint": "jshint ./",
        "start": "ts-node index.ts",
        "test": "NODE_ENV=test nyc mocha --require ts-node/register --require source-map-support/register --ui tdd test/index.ts",
        "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov",
        "prettier": "prettier --ignore-path ./.prettierignore --write \"*/**/*.ts\" \"*.ts\" \"bin/*.js\" ",
        "migrate:dev": "knex migrate:latest --env development",
        "migrate:rollback:dev": "knex migrate:rollback --env development --all",
        "migrate:test": "knex migrate:latest --env test",
        "migrate:rollback:test": "knex migrate:rollback --env test --all",
        "migrate:prod": "knex migrate:latest --env production",
        "migrate:rollback:prod": "echo 'Nope, crazy human !';",
        "migration:make": "knex migrate:make --env production"
    },
    "keywords": [
        "github"
    ],
    "author": {
        "email": "williamdes@wdes.fr",
        "name": "William Desportes",
        "url": "https://william.wdes.fr"
    },
    "directories": {
        "lib": "src",
        "test": "test",
        "bin": "bin"
    },
    "license": "MPL-2.0",
    "dependencies": {
        "@octokit/rest": "^18.1.0",
        "@sentry/node": "^6.1.0",
        "@types/imap": "^0.8.33",
        "@types/mailparser": "^3.0.1",
        "cloudflare": "^2.7.0",
        "crypto-random-string": "^3.3.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "imap": "^0.8.19",
        "knex": "^0.21.17",
        "log4js": "^6.3.0",
        "mailparser": "^3.0.1",
        "module-alias": "^2.2.2",
        "mysql2": "^2.2.5",
        "node-docker-api": "^1.1.22",
        "node-emoji": "^1.10.0",
        "node-nlp": "^4.20.0",
        "smtp-server": "^3.8.0"
    },
    "devDependencies": {
        "@sentry/types": "^6.1.0",
        "@types/chai": "^4.2.15",
        "@types/express": "^4.17.11",
        "@types/knex": "^0.16.1",
        "@types/mocha": "^8.2.0",
        "@types/node": "^14.14.27",
        "@types/smtp-server": "^3.5.6",
        "chai": "^4.3.0",
        "changelog-generator-twig": "^1.3.1",
        "jshint": "^2.12.0",
        "mocha": "^8.3.0",
        "nyc": "^15.1.0",
        "prettier": "^2.2.1",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.5"
    },
    "prettier": {
        "singleQuote": true,
        "proseWrap": "never",
        "trailingComma": "es5",
        "bracketSpacing": true,
        "printWidth": 120
    },
    "_moduleAliases": {
        "@src": "src",
        "@root": "./",
        "@test": "test",
        "@utils": "utils"
    }
}
